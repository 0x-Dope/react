{
  "private": true,
  "scripts": {
    "build": "node packages/react-scripts/scripts/build.js",
    "package": "cd packages/react-scripts-packaged && npm run package",
    "changelog": "lerna-changelog",
    "create-react-app": "tasks/cra.sh",
    "e2e": "tasks/e2e-simple.sh",
    "e2e:docker": "tasks/local-test.sh",
    "postinstall": "node bootstrap.js && cd packages/react-error-overlay/ && npm run build:prod",
    "publish": "tasks/release.sh",
    "start:packaged": "cd packages/react-scripts-packaged/test && npm install && npm start",
    "start": "node packages/react-scripts/scripts/start.js",
    "test": "node packages/react-scripts/scripts/test.js --env=jsdom",
    "format":
      "prettier --trailing-comma es5 --single-quote --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "eslint": "^4.4.1",
    "husky": "^0.13.2",
    "lerna": "^2.0.0",
    "lerna-changelog": "^0.6.0",
    "lint-staged": "^3.3.1",
    "prettier": "1.6.1"
  },
  "lint-staged": {
    "*.js": ["prettier --trailing-comma es5 --single-quote --write", "git add"],
    "yarn.lock": ["git rm --cached"]
  }
}
