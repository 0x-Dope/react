{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss",
    "stylelint-declaration-block-no-ignored-properties",
    "stylelint-order",
    "stylelint-config-rational-order/plugin"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "include",
          "add-mixin",
          "keyframes",
          "define-mixin",
          "mixin",
          "return",
          "extend",
          "else",
          "if",
          "for"
        ]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "include",
          "add-mixin",
          "keyframes",
          "define-mixin",
          "mixin",
          "return",
          "extend",
          "else",
          "if",
          "for"
        ]
      }
    ],
    "plugin/declaration-block-no-ignored-properties": true,
    "plugin/rational-order": true
  }
}
